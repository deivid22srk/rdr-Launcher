<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- Enable (Left-aligned) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <CheckBox
                    android:id="@+id/cbGyroEnabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enable_stick_gyro"
                    android:layout_marginBottom="0dp" />

            </LinearLayout>

            <!-- Gyro Target Stick (Right-aligned) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gyro_target_stick"
                    android:textStyle="bold"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"/>

                <RadioGroup
                    android:id="@+id/rgGyroTarget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
            <RadioButton
                android:id="@+id/rbTargetRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/right_stick"/>

            <RadioButton
                android:id="@+id/rbTargetLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/left_stick"/>
                </RadioGroup>

                </LinearLayout>
            </LinearLayout>


        <!-- Two columns -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- Left column: Activation -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/gyro_activator_button"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spGyroTriggerButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/button_options"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/gyro_mode"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <RadioGroup
                    android:id="@+id/rgGyroMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbHoldMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hold"/>

                    <RadioButton
                        android:id="@+id/rbToggleMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/toggle"/>
                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/direction"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>

                <CheckBox
                    android:id="@+id/cbInvertGyroX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invert_x"/>

                <CheckBox
                    android:id="@+id/cbInvertGyroY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invert_y"/>

            </LinearLayout>

            <!-- Right column: Tuning -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/gyro_sensitivity"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <!-- X Sensitivity -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/x_sensitivity"/>

                    <TextView
                        android:id="@+id/tvGyroXSensitivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"/>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/sbGyroXSensitivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="200"
                    android:progressTint="@color/seekbar_blue"
                    android:thumbTint="@color/seekbar_blue"/>

                <!-- Y Sensitivity -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/y_sensitivity"/>

                    <TextView
                        android:id="@+id/tvGyroYSensitivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"/>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/sbGyroYSensitivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="200"
                    android:progressTint="@color/seekbar_blue"
                    android:thumbTint="@color/seekbar_blue"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/filtering"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Smoothing -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/smoothing"/>

                    <TextView
                        android:id="@+id/tvGyroSmoothing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90%"/>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/sbGyroSmoothing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progressTint="@color/seekbar_blue"
                    android:thumbTint="@color/seekbar_blue"/>

                <!-- Deadzone -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/gyro_deadzone"/>

                    <TextView
                        android:id="@+id/tvGyroDeadzone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5%"/>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/sbGyroDeadzone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progressTint="@color/seekbar_blue"
                    android:thumbTint="@color/seekbar_blue" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
