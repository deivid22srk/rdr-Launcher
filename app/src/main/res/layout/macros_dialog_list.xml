<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MacrosRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:padding="8dp">

    <!-- Centered, fixed-width column -->
    <LinearLayout
        android:id="@+id/MacrosColumn"
        android:layout_width="@dimen/macros_dialog_width"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/TVHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/macros_hint"
            android:textAlignment="center"
            android:textSize="12sp"
            android:alpha="0.8"
            android:paddingBottom="4dp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="0dp"
            android:paddingBottom="8dp">

            <Button
                android:id="@+id/BTDisableAllLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disable_all"/>

            <Button
                android:id="@+id/BTEnableAllLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/enable_all"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RVMacros"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fadeScrollbars="false"
            android:scrollbars="vertical"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/SWIncludeTriggers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/include_triggers_note"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textSize="12sp" />



    </LinearLayout>
</LinearLayout>
