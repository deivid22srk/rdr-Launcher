                    android:layout_marginBottom="6dp"/>

                <Button
                    android:id="@+id/BTNResetP3"
                    style="@style/ButtonNeutral"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/reset"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="6dp"/>

                <Button
                    android:id="@+id/BTNAssignP3"
                    style="@style/ButtonNeutral"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/assign"
                    android:layout_marginBottom="6dp"/>
            </com.google.android.flexbox.FlexboxLayout>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#22FFFFFF"/>

        <!-- Player 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="8dp">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="nowrap"
                app:alignItems="center"
                app:justifyContent="flex_start">


                <CheckBox
                    android:id="@+id/CBPlayer4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/player_4"
                    android:textSize="16sp"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/TVPlayer4DeviceName"
