                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:maxLines="1"
                    android:text="@string/not_assigned"
                    android:textStyle="bold"
                    app:layout_flexGrow="1"
                    app:layout_minWidth="0dp"/>
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:flexWrap="wrap"
                app:alignItems="center"
                app:justifyContent="flex_end">


                <CheckBox
                    android:id="@+id/CBVibrateP2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vibrate"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="6dp"/>

                <Button
                    android:id="@+id/BTNMacrosP2"
                    style="@style/ButtonNeutral"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/macros"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="6dp"/>

                <Button
                    android:id="@+id/BTNResetP2"
                    style="@style/ButtonNeutral"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/reset"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="6dp"/>

                <Button
                    android:id="@+id/BTNAssignP2"
                    style="@style/ButtonNeutral"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/assign"
                    android:layout_marginBottom="6dp"/>
            </com.google.android.flexbox.FlexboxLayout>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#22FFFFFF"/>

        <!-- Player 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="8dp">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
